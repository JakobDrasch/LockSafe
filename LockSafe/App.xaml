<Application x:Class="LockSafe.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LockSafe"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!--Fonts-->
            <FontFamily x:Key="Futura">pack://application:,,,/Fonts/Futura/#Futura</FontFamily>
            <FontFamily x:Key="Poppins">pack://application:,,,/Fonts/Poppins/#Poppins</FontFamily>

            <!--Colors-->
            <SolidColorBrush x:Key="BackgroundColor">#B0BEC5</SolidColorBrush>
            <SolidColorBrush x:Key="MainColor">#99abb2</SolidColorBrush>
            <SolidColorBrush x:Key="SecondaryColor">#2B6CB0</SolidColorBrush>
            <SolidColorBrush x:Key="FontColor">#f0f3f4</SolidColorBrush>
            <SolidColorBrush x:Key="LogoColor">#293550</SolidColorBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>
